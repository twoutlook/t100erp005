       EXECUTE insert_prep USING sr.bxge004,sr.bxge001,sr.l_bxge001_desc,sr.l_bxge001_desc_desc,sr.bxge002,sr.bxge003,sr.bxba_t_bxba004,sr.bxge007
 
       IF SQLCA.sqlcode THEN
