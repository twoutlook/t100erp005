#子報表
DEFINE sr1 RECORD 
   l_bxge001_1           LIKE bxge_t.bxge001, 
   l_bxge002_1           LIKE bxge_t.bxge002, 
   l_bxge004_1           LIKE bxge_t.bxge004, 
   l_bxge003_1           LIKE bxge_t.bxge003, 
   l_bxge005_1           LIKE bxge_t.bxge005, 
