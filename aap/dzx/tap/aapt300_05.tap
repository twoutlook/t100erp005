   UPDATE apca_t SET apca103 = g_isam023,
                     apca104 = g_isam024
    WHERE apcaent = g_enterprise
      AND apcadocno = g_apca_t.apcadocno

   IF l_tmp != 0 THEN
      #視同"1.留置處理"
      UPDATE apca_t SET apca025 = '0',
                        apca030 = '',
                        apca031 = '',
