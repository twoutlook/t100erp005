      LET l_glar001_desc=l_glar[l_i].glar001_desc
      #抓取科目对应的明细科目或者独立科目
      LET l_glaq002='' #151204-00013#4 add
      CALL s_voucher_get_glac_str(g_glaa004,l_glar001) RETURNING l_glaq002
      #151204-00013#4--add--str--
      
      #160824-00004#4--add--str--
