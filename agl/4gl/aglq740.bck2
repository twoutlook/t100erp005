   DEFINE l_year_sum3      LIKE type_t.num20_6
   #160511-00006#1--add--end
   
   #刪除臨時表中資料
   DELETE FROM aglq740_tmp
  
   
   LET l_wc=cl_replace_str(g_wc,'glar001','glaq002')
   LET l_sql5=cl_replace_str(g_wc,'glar001','glac002')
   #顯示統制科目否
   IF tm.show_acc<>'Y' THEN
