  <point name="function.aglp540_mv_next_year_glar" order="4" ver="1" cite_std="N" new="Y" status="" src="s" readonly="" mark_hard="N">
    <![CDATA[
################################################################################
# Descriptions...:  
# Memo...........:
# Usage..........: CALL aglp540_mv_next_year_glar()
# Input parameter:  
# Return code....:  
# Date & Author..:  
# Modify.........:
################################################################################
PRIVATE FUNCTION aglp540_mv_next_year_glar()
#將本年度期餘額檔(glar_t)裡所有資產類科目(會計科目基本資料檔.科目類別!=6.損益類)複製一筆到次年0期(所有欄位不變,僅年度=次年,期別=0)

    


   DEFINE l_sql     STRING
   
   LET l_sql = " INSERT INTO glar_t (glarent,glarcomp,glarld,glar001,glar002,glar003,",
               "                     glar004,glar005,glar006,glar007,glar008,glar009,",
               "                     glar010,glar011,glar012,glar013,glar014,glar015,",
               "                     glar016,glar017,glar018,glar019,glar051,glar052,glar053,glar020,",
               "                     glar022,glar023,glar024,glar025,glar026,glar027,",
               "                     glar028,glar029,glar030,glar031,glar032,glar033,",
               "                     glar034,glar035,glar036,glar037)",
               " SELECT glarent,glarcomp,glarld,glar001,",g_master.glap002+1,",0,",
               "        glar004,SUM(glar005),SUM(glar006),SUM(glar007),SUM(glar008),glar009,",
               "        SUM(glar010),SUM(glar011),glar012,glar013,glar014,glar015,",
               "        glar016,glar017,glar018,glar019,glar051,glar052,glar053,glar020,",
               "        glar022,glar023,glar024,glar025,glar026,glar027,",
               "        glar028,glar029,glar030,glar031,glar032,glar033, ",
               "        SUM(glar034),SUM(glar035),SUM(glar036),SUM(glar037)",
               "   FROM glar_t ",
               "  WHERE glarent = '",g_enterprise,"'",
               "    AND glarld = '",g_master.glapld,"' AND glarcomp='",g_glaacomp,"'",
               "    AND glar001 IN ( SELECT glac002 FROM glac_t WHERE glacent = '",g_enterprise,"'",
               "                                                  AND glac001 = '",g_glaa004,"'",
               "                                                  AND glac007 <> '6')",
               "    AND glar002 = ",g_master.glap002,"",
               "   GROUP BY glarent,glarcomp,glarld,glar001,glar004,glar009,glar012,",
               "            glar013,glar014,glar015,glar016,glar017,glar018,glar019,",
               "            glar051,glar052,glar053,glar020,glar022,glar023,glar024,glar025,glar026,",
               "            glar027,glar028,glar029,glar030,glar031,glar032,glar033 ",
               "   ORDER BY glarld,glar001 " 
                    
   PREPARE aglp540_ins_glar_pre  FROM l_sql
   EXECUTE aglp540_ins_glar_pre
   IF SQLCA.SQLCODE  THEN
#      CALL cl_errmsg('','INS_glar','',SQLCA.SQLCODE,1)
      INITIALIZE g_errparam TO NULL
      LET g_errparam.extend = 'INS_glar'
      LET g_errparam.code = SQLCA.SQLCODE
      LET g_errparam.popup = TRUE
      CALL cl_err()
      LET g_success = 'N'
   END IF 

END FUNCTION]]>
  </point>
  <point name="function.aglp540_glaa007_1" order="5" ver="2" cite_std="N" new="Y" status="" src="s" readonly="" mark_hard="N">
    <![CDATA[
################################################################################
# Descriptions...:  
# Memo...........:
# Usage..........: CALL aglp540_glaa007_1()
# Input parameter:  
# Return code....:  
# Date & Author..:  
# Modify.........:
################################################################################
PRIVATE FUNCTION aglp540_glaa007_1()
#3.若帳別基本資料檔(glaa_t).年結方式(glaa007)=1.表結法
   #  3-1.累加科目期餘額檔中科目=參數設置的本期損益實科目的金額(貸-借)
   #  3-2.新增次年0期科目期餘額檔資料
   #      年度=執行年度的次年
   #      期別=0
   #      科目=參數設置的累積盈餘科目
   #      借貸方=若3-1.計算出的金額>0屬借方, 反之屬貸方
   #      注意:上述計算出來的金額需再加上執行年度期初時的累積盈虧科目金額(即累計結轉年度的期初結轉金額)
   
    DEFINE l_sum1      LIKE glaq_t.glaq003
    DEFINE l_sum2      LIKE glaq_t.glaq003
    DEFINE l_sum3      LIKE glaq_t.glaq003
    DEFINE l_sum1_s    LIKE glaq_t.glaq003
    DEFINE l_sum2_s    LIKE glaq_t.glaq003
    DEFINE l_sum3_s    LIKE glaq_t.glaq003
    DEFINE l_sql       STRING
    DEFINE l_i         LIKE type_t.num5
    DEFINE l_glab      DYNAMIC ARRAY OF RECORD
           glab005     LIKE glab_t.glab005
    END RECORD
    DEFINE l_glar      RECORD LIKE glar_t.*
    DEFINE l_flag      LIKE type_t.num5    #标记产生的借方还是贷方，1：借，2：贷
    DEFINE l_n         LIKE type_t.num5
    
    INITIALIZE l_glar.* TO NULL
    LET l_flag = 0  
    #依据科目抓取参数设置的科目,9711_02:期末結轉本期損益（资产類）;9711_03:累積盈虧（資產類）
    LET l_i =1
    LET l_sql = " SELECT glab005 FROM glab_t WHERE glabent = '",g_enterprise,"'",
                "                              AND glabld = '",g_master.glapld,"' ",
                "                              AND glab003 IN ('9711_02','9711_03')" ,
                "  ORDER BY glab003 "
    PREPARE aglp540_glab_pre  FROM l_sql
    DECLARE aglp540_glab_cs  CURSOR FOR aglp540_glab_pre
    FOREACH aglp540_glab_cs INTO l_glab[l_i].glab005
       IF SQLCA.sqlcode THEN
#          CALL cl_errmsg('',l_glab[l_i].glab005,'',SQLCA.SQLCODE,1)
          INITIALIZE g_errparam TO NULL
          LET g_errparam.extend = l_glab[l_i].glab005
          LET g_errparam.code = SQLCA.SQLCODE
          LET g_errparam.popup = TRUE
          CALL cl_err()
          LET g_success = 'N'
          EXIT FOREACH
       END IF
       LET l_i = l_i + 1
    END FOREACH
    
    #给默认值
    LET l_glar.glarent = g_enterprise
    LET l_glar.glarcomp = g_glaacomp
    LET l_glar.glarld = g_master.glapld
    LET l_glar.glar001 = l_glab[2].glab005
    IF cl_null(l_glar.glar001) THEN
#       CALL cl_errmsg('glar001','','','agl-00230',1)
       INITIALIZE g_errparam TO NULL
       LET g_errparam.extend = ''
       LET g_errparam.code = 'agl-00230'
       LET g_errparam.popup = TRUE
       CALL cl_err()
       LET g_success = 'N'
       RETURN
    END IF 
    LET l_glar.glar002 = g_master.glap002+1
    LET l_glar.glar003 = 0
    LET l_glar.glar004 = ' '
    LET l_glar.glar009 = g_glaa001
    #3-1.累加科目期餘額檔中科目=參數設置的本期損益實科目的金額(貸-借)
    SELECT SUM(glar006-glar005),SUM(glar035-glar034),SUM(glar037-glar036)
      INTO l_sum1,l_sum2,l_sum3
      FROM glar_t
     WHERE glarent = g_enterprise
       AND glarld = g_master.glapld
       AND glarcomp = g_glaacomp
       AND glar001 = l_glab[1].glab005             #參數設置的本期損益實科目
       AND glar002 = g_master.glap002
    IF cl_null(l_sum1) THEN LET l_sum1 = 0  END IF
    IF cl_null(l_sum2) THEN LET l_sum2 = 0  END IF
    IF cl_null(l_sum3) THEN LET l_sum3 = 0  END IF
    
    IF l_sum1 >0 THEN
       LET l_flag = 1    #产生在借方
    ELSE
       LET l_flag = 2    #产生在贷方
       LET l_sum1 = l_sum1 * (-1)
       LET l_sum2 = l_sum2 * (-1)
       LET l_sum3 = l_sum3 * (-1)
    END IF 
    #執行年度期初時的累積盈虧科目金額(即累計結轉年度的期初結轉金額)
     SELECT SUM(glar006-glar005),SUM(glar035-glar034),SUM(glar037-glar036) 
       INTO l_sum1_s,l_sum2_s,l_sum3_s
       FROM glar_t
     WHERE glarent = g_enterprise
       AND glarld = g_master.glapld
       AND glarcomp = g_glaacomp
       AND glar001 = l_glab[2].glab005            #參數設置的累積盈虧科目
       AND glar002 = g_master.glap002
       AND glar003 = 0                            #当前年度的0期 
    IF cl_null(l_sum1_s) THEN LET l_sum1_s = 0  END IF
    IF cl_null(l_sum2_s) THEN LET l_sum2_s = 0  END IF
    IF cl_null(l_sum3_s) THEN LET l_sum3_s = 0  END IF
    #參數設置的本期損益實科目的金額+計結轉年度的期初結轉金額
    LET l_sum1 = l_sum1 + l_sum1_s
    LET l_sum2 = l_sum2 + l_sum2_s
    LET l_sum3 = l_sum3 + l_sum3_s
     
    #判断下累计盈亏类的资料是否存在，不存在的话insert 否则update
    SELECT COUNT(*) INTO l_n FROM glar_t 
     WHERE glarent = g_enterprise
       AND glarld  = l_glar.glarld
       AND glarcomp = g_glarcomp
       AND glar001 = l_glar.glar001
       AND glar002 = l_glar.glar002
       AND glar003 = l_glar.glar003
       AND glar004 = l_glar.glar004
#       AND glar009 = l_glar.glar009
#       AND glar012 = l_glar.glar012
#       AND glar013 = l_glar.glar013
#       AND glar014 = l_glar.glar014
#       AND glar015 = l_glar.glar015
#       AND glar016 = l_glar.glar016
#       AND glar017 = l_glar.glar017
#       AND glar018 = l_glar.glar018
#       AND glar019 = l_glar.glar019
#       AND glar051 = l_glar.glar051
#       AND glar052 = l_glar.glar052
#       AND glar053 = l_glar.glar053
#       AND glar020 = l_glar.glar020
#       AND glar022 = l_glar.glar022
#       AND glar023 = l_glar.glar023
#       AND glar024 = l_glar.glar024
#       AND glar025 = l_glar.glar025
#       AND glar026 = l_glar.glar026
#       AND glar027 = l_glar.glar027
#       AND glar028 = l_glar.glar028
#       AND glar029 = l_glar.glar029
#       AND glar030 = l_glar.glar030
#       AND glar031 = l_glar.glar031
#       AND glar032 = l_glar.glar032
#       AND glar033 = l_glar.glar033
       
    IF l_n = 0  THEN
       #借方       
       IF l_flag =1  THEN
          LET l_glar.glar005 = l_sum1
          LET l_glar.glar006 = 0
          LET l_glar.glar007 = 1
          LET l_glar.glar008 = 0
          LET l_glar.glar010 = l_sum1
          LET l_glar.glar011 = 0
          LET l_glar.glar034 = l_sum2
          LET l_glar.glar035 = 0
          LET l_glar.glar036 = l_sum3
          LET l_glar.glar037 = 0
       ELSE
          LET l_glar.glar005 = 0
          LET l_glar.glar006 = l_sum1
          LET l_glar.glar007 = 0
          LET l_glar.glar008 = 1
          LET l_glar.glar010 = 0
          LET l_glar.glar011 = l_sum1
          LET l_glar.glar034 = 0
          LET l_glar.glar035 = l_sum2
          LET l_glar.glar036 = 0
          LET l_glar.glar037 = l_sum3
       END IF  
       
       INSERT INTO glar_t VALUES(l_glar.*) 
    ELSE
       IF l_flag = 1  THEN
          UPDATE glar_t SET glar005 = glar005+l_sum1,
                            glar007 = glar007+1,
                            glar010 = glar010+l_sum1,
                            glar034 = glar034+l_sum2,
                            glar036 = glar036+l_sum3
                      WHERE glarent = g_enterprise
                        AND glarld = l_glar.glarld
                        AND glarcomp = g_glaacomp
                        AND glar001 = l_glar.glar001
                        AND glar002 = l_glar.glar002
                        AND glar003 = l_glar.glar003
                        AND glar004 = l_glar.glar004
#                        AND glar009 = l_glar.glar009
#                        AND glar012 = l_glar.glar012
#                        AND glar013 = l_glar.glar013
#                        AND glar014 = l_glar.glar014
#                        AND glar015 = l_glar.glar015
#                        AND glar016 = l_glar.glar016
#                        AND glar017 = l_glar.glar017
#                        AND glar018 = l_glar.glar018
#                        AND glar019 = l_glar.glar019
#                        AND glar051 = l_glar.glar051
#                        AND glar052 = l_glar.glar052
#                        AND glar053 = l_glar.glar053
#                        AND glar020 = l_glar.glar020
#                        AND glar022 = l_glar.glar022
#                        AND glar023 = l_glar.glar023
#                        AND glar024 = l_glar.glar024
#                        AND glar025 = l_glar.glar025
#                        AND glar026 = l_glar.glar026
#                        AND glar027 = l_glar.glar027
#                        AND glar028 = l_glar.glar028
#                        AND glar029 = l_glar.glar029
#                        AND glar030 = l_glar.glar030
#                        AND glar031 = l_glar.glar031
#                        AND glar032 = l_glar.glar032
#                        AND glar033 = l_glar.glar033
                       
       ELSE
          UPDATE glar_t SET glar006 = glar006+l_sum1,
                            glar008 = glar008 +1,
                            glar011 = glar011+l_sum1,
                            glar035 = glar035+l_sum2,
                            glar037 = glar037+l_sum3
                      WHERE glarent = g_enterprise
                        AND glarld = l_glar.glarld
                        AND glarcomp = g_glaacomp
                        AND glar001 = l_glar.glar001
                        AND glar002 = l_glar.glar002
                        AND glar003 = l_glar.glar003
                        AND glar004 = l_glar.glar004
#                        AND glar009 = l_glar.glar009
#                        AND glar012 = l_glar.glar012
#                        AND glar013 = l_glar.glar013
#                        AND glar014 = l_glar.glar014
