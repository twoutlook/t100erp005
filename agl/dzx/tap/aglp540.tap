  <point name="process.pre_process" order="" ver="2" cite_std="N" new="N" status="" src="s" readonly="" mark_hard="N">
    <![CDATA[   #依据帐别抓取归属法人,账簿币别,会计科目参照表号,年度结转方式
   LET g_glaacomp =''
   LET g_glaa001 = ''
   LET g_glaa004 = ''
   LET g_glaa007 = '' 
   SELECT glaacomp,glaa001,glaa004,glaa007 INTO g_glaacomp,g_glaa001,g_glaa004,g_glaa007 
     FROM glaa_t 
    WHERE glaaent = g_enterprise 
      AND glaald = g_master.glapld
      
   #开启事务
   CALL s_transaction_begin()
   
   #错误信息汇总初始化
   CALL cl_err_collect_init()
   LET g_success = 'Y'
   #1.删除下一年度的结转金额
   CALL aglp540_glar_del()
   #2.将將本年度期餘額檔(glar_t)裡所有資產類科目(會計科目基本資料檔.科目類別!=6.損益類)複製一筆
   #到次年0期(所有欄位不變,僅年度=次年,期別=0)
   CALL aglp540_mv_next_year_glar()
   #3.若帳別基本資料檔(glaa_t).年結方式(glaa007)=1.表結法
   #  3-1.累加科目期餘額檔中科目=參數設置的本期損益實科目(资产类)的金額(貸-借)
   #  3-2.新增次年0期科目期餘額檔資料
   #      年度=執行年度的次年
   #      期別=0
   #      科目=參數設置的累積盈餘科目
   #      借貸方=若3-1.計算出的金額>0屬借方, 反之屬貸方
   #      注意:上述計算出來的金額需再加上執行年度期初時的累積盈虧科目金額(即累計結轉年度的期初結轉金額)
   IF g_glaa007 = '1' THEN
#      CALL aglp540_glaa007_1()
      CALL aglp540_glaa007_2()
   END IF 
   #4.更新帳別資料中現行會計年度+1,期別=1
   IF g_success = 'Y' THEN
      UPDATE glaa_t SET glaa010 = g_master.glap002 +1,
                        glaa011 = 1
      WHERE glaaent=g_enterprise AND glaald=g_master.glapld AND glaacomp=g_glaacomp
      IF SQLCA.SQLCODE THEN
#         CALL cl_errmsg('','UPD_glaa','',SQLCA.SQLCODE,1)
         INITIALIZE g_errparam TO NULL
         LET g_errparam.extend = 'UPD_glaa'
         LET g_errparam.code = SQLCA.SQLCODE
         LET g_errparam.popup = TRUE
         CALL cl_err()
         LET g_success = 'N'
      END IF 
   END IF 
   
   IF g_success = 'Y' THEN
      CALL s_transaction_end('Y','0')
   ELSE
     CALL s_transaction_end('N','0')
     CALL cl_err_collect_show()      
   END IF ]]>
