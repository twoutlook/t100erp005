   PREPARE apmp431_ins_apmt580_pre1 FROM l_sql
   DECLARE apmp431_ins_apmt580_cs1 CURSOR FOR apmp431_ins_apmt580_pre1
   
#   #將有勾選產生帳款處理的pmeo_t進行更新
