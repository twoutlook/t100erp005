# Memo...........: 
# Usage..........: CALL apmt100_05_input()
# Input parameter: None
# Return code....: None
# Date & Author..: 2014/09/24 By lixiang
# Modify.........:
################################################################################
DIALOG apmt100_05_input()
   DEFINE l_ac_t          LIKE type_t.num5        #未取消的ARRAY CNT   
   DEFINE l_count         LIKE type_t.num5
   DEFINE l_insert        LIKE type_t.num5
   DEFINE l_cmd           LIKE type_t.chr5
   DEFINE l_lock_sw       LIKE type_t.chr1
   DEFINE l_forupd_sql    STRING
   DEFINE l_n             LIKE type_t.num5                #檢查重複用  
   DEFINE l_cnt           LIKE type_t.num5
   #add by lixiang 20150604--S----
   DEFINE l_str1          STRING
   DEFINE l_str2          STRING
   DEFINE bst             base.StringTokenizer
   DEFINE l_index         LIKE type_t.num5
   DEFINE l_pmbd002       LIKE pmbd_t.pmbd002
   #add by lixiang 20150604--E----
   
   INPUT ARRAY g_pmbd_d FROM s_detail1_apmt100_05.*
          ATTRIBUTE(COUNT = g_d_cnt_t10005,MAXCOUNT = g_max_rec,WITHOUT DEFAULTS, 
                  INSERT ROW = FALSE,
                  DELETE ROW = g_detail_delete,
                  APPEND ROW = g_detail_insert)

         BEFORE INPUT
            LET l_forupd_sql = "SELECT pmbdstus,pmbddocno,pmbd001,pmbd002,'',pmbd003,pmbd004 FROM pmbd_t WHERE pmbdent = ? AND pmbddocno = ? AND pmbd002 = ? FOR UPDATE"
            LET l_forupd_sql = cl_sql_forupd(l_forupd_sql)
            PREPARE apmt100_05_dialog_b FROM l_forupd_sql
            DECLARE apmt100_05_dialog_bcl CURSOR FOR apmt100_05_dialog_b
            IF g_appoint_idx > 0 THEN
               CALL DIALOG.setCurrentRow("s_detail1_apmt100_05",g_appoint_idx)
            END IF
            LET g_pmbd003_d = '1' #付款
  
          BEFORE ROW 
            LET l_cmd = ''
            LET l_ac = ARR_CURR()
            LET g_detail_idx = l_ac
            LET l_lock_sw = 'N'            #DEFAULT
            LET l_n = ARR_COUNT()
            DISPLAY l_ac TO FORMONLY.idx
         
            CALL s_transaction_begin()
   
            LET g_rec_b = g_pmbd_d.getLength()
            
            IF g_rec_b >= l_ac 
               AND NOT cl_null(g_pmbd_d[l_ac].pmbddocno)
               AND NOT cl_null(g_pmbd_d[l_ac].pmbd002) 
 
            THEN
               LET l_cmd='u'
			      LET g_pmbd_d_t.* = g_pmbd_d[l_ac].*  #BACKUP
			   
			      OPEN apmt100_05_dialog_bcl USING g_enterprise,g_pmbadocno_d,g_pmbd_d[l_ac].pmbd002
               IF SQLCA.sqlcode THEN
                  INITIALIZE g_errparam TO NULL
                  LET g_errparam.code = SQLCA.sqlcode
                  LET g_errparam.extend = "apmt100_05_dialog_bcl"
                  LET g_errparam.popup = TRUE
                  CALL cl_err()

                  LET l_lock_sw='Y'
               ELSE
                  FETCH apmt100_05_dialog_bcl INTO g_pmbd_d[l_ac].chk,g_pmbd_d[l_ac].pmbddocno,g_pmbd_d[l_ac].pmbd001,g_pmbd_d[l_ac].pmbd002,g_pmbd_d[l_ac].pmbd002_1_desc,g_pmbd_d[l_ac].pmbd003,g_pmbd_d[l_ac].pmbd004
                  
                  IF SQLCA.sqlcode THEN
                     INITIALIZE g_errparam TO NULL
                     LET g_errparam.code = SQLCA.sqlcode
                     LET g_errparam.extend = g_pmbadocno_d
                     LET g_errparam.popup = TRUE
                     CALL cl_err()

                     LET l_lock_sw = "Y"
                  END IF
				      CALL apmt100_05_pmbd002_ref(g_pmbd_d[l_ac].pmbd002) RETURNING g_pmbd_d[l_ac].pmbd002_1_desc
                  
                  CALL cl_show_fld_cont()
               END IF
            ELSE
               LET l_cmd='a'
            END IF
        
         BEFORE INSERT
            LET l_insert = TRUE
            LET l_n = ARR_COUNT()
            LET l_cmd = 'a'
            INITIALIZE g_pmbd_d[l_ac].* TO NULL          
            
            LET g_pmbd_d[l_ac].pmbddocno = g_pmbadocno_d
            LET g_pmbd_d[l_ac].pmbd001 = g_pmba001_d
            LET g_pmbd_d[l_ac].chk = 'Y'
            LET g_pmbd_d[l_ac].pmbd003 = g_pmbd003_d
            #LET g_pmbd_d[l_ac].pmbd003 = '2'  #收款
            LET g_pmbd_d[l_ac].pmbd004 = 'N'
            
            LET g_pmbd_d_t.* = g_pmbd_d[l_ac].*     #新輸入資料

            CALL cl_show_fld_cont()
            
            
         AFTER INSERT
            LET l_insert = FALSE
            IF INT_FLAG THEN
               INITIALIZE g_errparam TO NULL
               LET g_errparam.code = 9001
               LET g_errparam.extend = ''
               LET g_errparam.popup = FALSE
               CALL cl_err()

               LET INT_FLAG = 0
               #CANCEL INSERT
            END IF
               
            LET l_count = 1  
            SELECT COUNT(*) INTO l_count FROM pmbd_t 
             WHERE pmbdent = g_enterprise AND pmbddocno = g_pmbd_d[l_ac].pmbddocno
               AND pmbd002 = g_pmbd_d[l_ac].pmbd002
      
            #資料未重複, 插入新增資料
            IF l_count = 0 THEN 
               INSERT INTO pmbd_t (pmbdent,pmbddocno,pmbd001,pmbd002,pmbd003,pmbd004,pmbdstus)
                  VALUES (g_enterprise,g_pmbd_d[l_ac].pmbddocno,g_pmbd_d[l_ac].pmbd001,g_pmbd_d[l_ac].pmbd002,g_pmbd_d[l_ac].pmbd003,g_pmbd_d[l_ac].pmbd004,g_pmbd_d[l_ac].chk)
            #mark by lixiang 20150604
            #ELSE    
            #   INITIALIZE g_errparam TO NULL
            #   LET g_errparam.code = "std-00006"
            #   LET g_errparam.extend = 'INSERT'
            #   LET g_errparam.popup = TRUE
            #   CALL cl_err()
            #
            #   INITIALIZE g_pmbd_d[l_ac].* TO NULL
            #   CALL s_transaction_end('N','0')
            #   #CANCEL INSERT
            END IF
 
            IF SQLCA.SQLcode  THEN
               INITIALIZE g_errparam TO NULL
               LET g_errparam.code = SQLCA.sqlcode
               LET g_errparam.extend = "pmbd_t"
               LET g_errparam.popup = TRUE
               CALL cl_err()
  
               CALL s_transaction_end('N','0')                    
               #CANCEL INSERT
            ELSE
               CALL s_transaction_end('Y','0')
               ERROR 'INSERT O.K'
               LET g_rec_b = g_rec_b + 1
            END IF
              
         BEFORE DELETE                            #是否取消單身
            IF NOT cl_null(g_pmbd_d[l_ac].pmbddocno)
               AND NOT cl_null(g_pmbd_d[l_ac].pmbd002)  THEN 
               
               IF cl_ask_del_detail() THEN
                  IF l_lock_sw = "Y" THEN
                     INITIALIZE g_errparam TO NULL
                     LET g_errparam.code =  -263
                     LET g_errparam.extend = ""
                     LET g_errparam.popup = TRUE
                     CALL cl_err()
                  
                     #CANCEL DELETE
                  END IF
                  
                  DELETE FROM pmbd_t
                    WHERE pmbdent = g_enterprise AND pmbddocno = g_pmbd_d_t.pmbddocno
                      AND pmbd002 = g_pmbd_d_t.pmbd002
                  
                  IF SQLCA.sqlcode THEN
                     INITIALIZE g_errparam TO NULL
                     LET g_errparam.code = SQLCA.sqlcode
                     LET g_errparam.extend = "pmbd_t"
                     LET g_errparam.popup = TRUE
                     CALL cl_err()
                  
                     CALL s_transaction_end('N','0')
                     #CANCEL DELETE   
                  ELSE
                     CALL s_transaction_end('Y','0')
                  END IF 
                  CLOSE apmt100_05_dialog_bcl
                  LET l_count = g_pmbd_d.getLength()
               END IF
            END IF 
            
        AFTER DELETE
           CALL apmt100_05_b_fill(g_pmbadocno_d,g_pmbd003_d) #收款
            
        ON ROW CHANGE
            IF INT_FLAG THEN
               INITIALIZE g_errparam TO NULL
               LET g_errparam.code = 9001
               LET g_errparam.extend = ''
               LET g_errparam.popup = FALSE
               CALL cl_err()

               LET INT_FLAG = 0
               LET g_pmbd_d[l_ac].* = g_pmbd_d_t.*
               CLOSE apmt100_05_dialog_bcl
               CALL s_transaction_end('N','0')
               EXIT DIALOG
            END IF

            IF l_lock_sw = 'Y' THEN
               INITIALIZE g_errparam TO NULL
               LET g_errparam.code = -263
               LET g_errparam.extend = g_pmbd_d[l_ac].pmbd002
               LET g_errparam.popup = TRUE
               CALL cl_err()

               LET g_pmbd_d[l_ac].* = g_pmbd_d_t.*
            ELSE
               UPDATE pmbd_t SET (pmbd002,pmbd003,pmbd004,pmbdstus) = (g_pmbd_d[l_ac].pmbd002,g_pmbd_d[l_ac].pmbd003,g_pmbd_d[l_ac].pmbd004,g_pmbd_d[l_ac].chk)
                WHERE pmbdent = g_enterprise 
                  AND pmbddocno = g_pmbd_d_t.pmbddocno
                  AND pmbd002 = g_pmbd_d_t.pmbd002


               IF SQLCA.sqlcode THEN
                  INITIALIZE g_errparam TO NULL
                  LET g_errparam.code = SQLCA.sqlcode
                  LET g_errparam.extend = "pmbd_t"
                  LET g_errparam.popup = TRUE
                  CALL cl_err()

                  LET g_pmbd_d[l_ac].* = g_pmbd_d_t.*
                  CALL s_transaction_end('N','0')
               ELSE
                  CALL s_transaction_end('Y','0')
               END IF
            END IF
            
         AFTER ROW
            CLOSE apmt100_05_dialog_bcl
            CALL s_transaction_end('Y','0')

         AFTER FIELD pmbd002_1
            CALL apmt100_05_pmbd002_ref(g_pmbd_d[l_ac].pmbd002) RETURNING g_pmbd_d[l_ac].pmbd002_1_desc
            DISPLAY BY NAME g_pmbd_d[l_ac].pmbd002_1_desc
            IF (NOT cl_null(g_pmbd_d[l_ac].pmbddocno)) AND (NOT cl_null(g_pmbd_d[l_ac].pmbd002)) THEN 
               IF l_cmd = 'a' OR ( l_cmd = 'u' AND ( l_cmd = 'u' AND (g_pmbd_d[l_ac].pmbddocno != g_pmbd_d_t.pmbddocno OR g_pmbd_d[l_ac].pmbd002 != g_pmbd_d_t.pmbd002))) THEN 
                  IF NOT ap_chk_notDup("","SELECT COUNT(*) FROM pmbd_t WHERE "||"pmbdent = '" ||g_enterprise|| "' AND "||"pmbddocno = '"||g_pmbd_d[l_ac].pmbddocno ||"' AND "|| "pmbd002 = '"||g_pmbd_d[l_ac].pmbd002 ||"' ",'std-00004',0) THEN 
                     LET g_pmbd_d[l_ac].pmbd002 = g_pmbd_d_t.pmbd002
                     CALL apmt100_05_pmbd002_ref(g_pmbd_d[l_ac].pmbd002) RETURNING g_pmbd_d[l_ac].pmbd002_1_desc
                     DISPLAY BY NAME g_pmbd_d[l_ac].pmbd002_1_desc
                     NEXT FIELD CURRENT
                  END IF
               END IF
               IF l_cmd = 'a' OR ( l_cmd = 'u' AND (g_pmbd_d[l_ac].pmbd002 != g_pmbd_d_t.pmbd002)) THEN 
                  IF g_pmbd003_d = '1' THEN  #付款
                     IF NOT ap_chk_isExist(g_pmbd_d[l_ac].pmbd002,"SELECT COUNT(*) FROM ooib_t WHERE ooibent = '" ||g_enterprise||"' AND ooib001 = '1' AND ooib002 = ? ","apm-00185",0 ) THEN
                        LET g_pmbd_d[l_ac].pmbd002 =g_pmbd_d_t.pmbd002
                        CALL apmt100_05_pmbd002_ref(g_pmbd_d[l_ac].pmbd002) RETURNING g_pmbd_d[l_ac].pmbd002_1_desc
                        DISPLAY BY NAME g_pmbd_d[l_ac].pmbd002_1_desc
                        NEXT FIELD CURRENT
                     END IF
                     IF NOT ap_chk_isExist(g_pmbd_d[l_ac].pmbd002,"SELECT COUNT(*) FROM ooib_t WHERE ooibent = '" ||g_enterprise||"' AND ooib001 = '1' AND ooib002 = ? AND ooibstus = 'Y' ","sub-01302","aooi716") THEN  #apm-00186 #160318-00005#36  By 07900 --mod
                        LET g_pmbd_d[l_ac].pmbd002 =g_pmbd_d_t.pmbd002
                        CALL apmt100_05_pmbd002_ref(g_pmbd_d[l_ac].pmbd002) RETURNING g_pmbd_d[l_ac].pmbd002_1_desc
                        DISPLAY BY NAME g_pmbd_d[l_ac].pmbd002_1_desc
                        NEXT FIELD CURRENT
                     END IF
                  END IF
                  IF g_pmbd003_d = '2' THEN  #收款
                     IF NOT ap_chk_isExist(g_pmbd_d[l_ac].pmbd002,"SELECT COUNT(*) FROM ooib_t WHERE ooibent = '" ||g_enterprise||"' AND ooib001 = '2' AND ooib002 = ? ","apm-00183",0 ) THEN
                        LET g_pmbd_d[l_ac].pmbd002 =g_pmbd_d_t.pmbd002
                        CALL apmt100_05_pmbd002_ref(g_pmbd_d[l_ac].pmbd002) RETURNING g_pmbd_d[l_ac].pmbd002_1_desc
                        DISPLAY BY NAME g_pmbd_d[l_ac].pmbd002_1_desc
                        NEXT FIELD CURRENT
                     END IF
                     IF NOT ap_chk_isExist(g_pmbd_d[l_ac].pmbd002,"SELECT COUNT(*) FROM ooib_t WHERE ooibent = '" ||g_enterprise||"' AND ooib001 = '2' AND ooib002 = ? AND ooibstus = 'Y' ","sub-01302","aooi714") THEN  #apm-00184 #160318-00005#36  By 07900 --mod
                        LET g_pmbd_d[l_ac].pmbd002 =g_pmbd_d_t.pmbd002
                        CALL apmt100_05_pmbd002_ref(g_pmbd_d[l_ac].pmbd002) RETURNING g_pmbd_d[l_ac].pmbd002_1_desc
                        DISPLAY BY NAME g_pmbd_d[l_ac].pmbd002_1_desc
                        NEXT FIELD CURRENT
                     END IF
                  END IF
               END IF
            END IF

         AFTER FIELD pmbd004_1
            IF NOT cl_null(g_pmbd_d[l_ac].pmbddocno) AND NOT cl_null(g_pmbd_d[l_ac].pmbd004) THEN 
               IF l_cmd = 'a' OR (l_cmd = 'u' AND (g_pmbd_d[l_ac].pmbd004 != g_pmbd_d_t.pmbd004 OR cl_null(g_pmbd_d_t.pmbd004))) THEN
                  IF g_pmbd_d[l_ac].pmbd004 = 'Y' THEN
                     IF NOT apmt100_05_pmbd004_chk() THEN
                        LET g_pmbd_d[l_ac].pmbd004 = g_pmbd_d_t.pmbd004
                        NEXT FIELD CURRENT
                     END IF
                  END IF
               END IF
            END IF

         ON ACTION controlp INFIELD pmbd002_1
            INITIALIZE g_qryparam.* TO NULL
            IF l_cmd = 'a' THEN
               LET g_qryparam.state = 'c' #開窗多選，新增多筆 #modify by lixiang 20150604
            ELSE
               LET g_qryparam.state = 'i'
            END IF
            LET g_qryparam.reqry = FALSE

            LET g_qryparam.default1 = g_pmbd_d[l_ac].pmbd002            #給予default值
            
            IF l_cmd = 'a' THEN
               LET g_qryparam.where = " ooibstus = 'Y' " #modify by lixiang 20150604
            END IF
   
            IF g_pmbd_d[l_ac].pmbd003 = '1' THEN  #付款
               CALL q_ooib001_2()                                #呼叫開窗
            END IF
            IF g_pmbd_d[l_ac].pmbd003 = '2' THEN  #收款
               CALL q_ooib001_1()                                #呼叫開窗
            END IF
            
            #add by lixiang 20150604--S----
            
            LET l_str1 = g_qryparam.return1              #將開窗取得的值回傳到變數
            LET l_index = l_str1.getIndexOf('|',1)
            #開窗時多選，則所選資料全部新增到表中
            IF l_index > 1 THEN
               LET bst= base.StringTokenizer.create(l_str1,"|")
               WHILE bst.hasMoreTokens()
                  LET l_str2 = bst.nextToken()
                  LET l_pmbd002 = l_str2
                  LET l_count = 1  
                  SELECT COUNT(*) INTO l_count FROM pmbd_t
                   WHERE pmbdent = g_enterprise AND pmbddocno = g_pmbd_d[l_ac].pmbddocno AND pmbd002 = l_pmbd002 AND pmbd003 = g_pmbd_d[l_ac].pmbd003
                  IF l_count = 0 THEN
                     INSERT INTO pmbd_t (pmbdent,pmbddocno,pmbd001,pmbd002,pmbd003,pmbd004,pmbdstus)
                        VALUES (g_enterprise,g_pmbd_d[l_ac].pmbddocno,g_pmbd_d[l_ac].pmbd001,l_pmbd002,g_pmbd_d[l_ac].pmbd003,'N','Y')
                  END IF
               END WHILE

               CALL apmt100_05_b_fill(g_pmbd_d[l_ac].pmbddocno,g_pmbd_d[l_ac].pmbd003)
               LET g_rec_b = g_pmbd_d.getLength()
               IF g_rec_b > 0 THEN
                  LET l_cmd = 'u' 
                  LET g_pmbd_d_t.* = g_pmbd_d[l_ac].*
               END IF
            ELSE   
            #add by lixiang 20150604--E----
               LET g_pmbd_d[l_ac].pmbd002 = g_qryparam.return1              #將開窗取得的值回傳到變數
               
               DISPLAY g_pmbd_d[l_ac].pmbd002 TO pmbd002_1             #顯示到畫面上
               CALL apmt100_05_pmbd002_ref(g_pmbd_d[l_ac].pmbd002) RETURNING g_pmbd_d[l_ac].pmbd002_1_desc
               DISPLAY BY NAME g_pmbd_d[l_ac].pmbd002_1_desc
            END IF
            
