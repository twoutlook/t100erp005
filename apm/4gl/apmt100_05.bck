PUBLIC FUNCTION apmt100_05_b_fill(p_pmbddocno,p_pmbd003)
   DEFINE p_pmbddocno   LIKE pmbd_t.pmbddocno
   DEFINE p_pmbd003   LIKE pmbd_t.pmbd003
   DEFINE l_sql       STRING

   DEFINE l_ac1       LIKE type_t.num5
   
   LET l_sql = "SELECT pmbdstus,pmbddocno,pmbd001,pmbd002,'',pmbd003,pmbd004 FROM pmbd_t WHERE pmbdent = '",g_enterprise,"' AND pmbddocno = '",p_pmbddocno,"' AND pmbd003 = '",p_pmbd003,"' "
   IF NOT cl_null(g_wc2_t10005) THEN
      LET l_sql = l_sql CLIPPED, " AND ",g_wc2_t10005 CLIPPED
   END IF
   PREPARE apmt100_05_pb FROM l_sql
   DECLARE b_fill_curs CURSOR FOR apmt100_05_pb

   CALL g_pmbd_d.clear()
   LET l_ac1 = 1
   FOREACH b_fill_curs INTO g_pmbd_d[l_ac1].*
      IF SQLCA.sqlcode THEN
         INITIALIZE g_errparam TO NULL
         LET g_errparam.code = SQLCA.sqlcode
         LET g_errparam.extend = "FOREACH:"
         LET g_errparam.popup = TRUE
         CALL cl_err()

         EXIT FOREACH
      END IF
      
      CALL apmt100_05_pmbd002_ref(g_pmbd_d[l_ac1].pmbd002) RETURNING g_pmbd_d[l_ac1].pmbd002_1_desc
          
      LET l_ac1 = l_ac1 + 1
      IF l_ac1 > g_max_rec THEN
         #CALL cl_err( "", 9035, 0 )
         EXIT FOREACH
      END IF

   END FOREACH
   CALL g_pmbd_d.deleteElement(g_pmbd_d.getLength())
   LET g_rec_b = l_ac1 - 1
   DISPLAY g_rec_b TO FORMONLY.cnt
   LET g_pmba6_d.* = g_pmbd_d.*
   #將總筆數, 目前筆數指定到共用變數中
   IF g_rec_b > 0 THEN
      LET g_d_idx_t10005 = 1
   ELSE
      LET g_d_idx_t10005 = 0
   END IF
   LET g_d_cnt_t10005 = g_rec_b
   
   CLOSE b_fill_curs
   FREE apmt100_05_pb
   
END FUNCTION
