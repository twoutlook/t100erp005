PRIVATE FUNCTION apmt100_05_pmbd004_chk()
DEFINE l_n            LIKE type_t.num5
DEFINE r_success      LIKE type_t.num5

       LET l_n = 0
       LET r_success = TRUE       
       SELECT COUNT(*) INTO l_n FROM pmbd_t WHERE pmbdent = g_enterprise AND pmbddocno = g_pmbd_d[l_ac].pmbddocno AND pmbd003 = g_pmbd_d[l_ac].pmbd003 AND pmbd004 = 'Y'

       IF l_n > 0 THEN
          IF g_pmbd_d[l_ac].pmbd003 = '1' THEN   #已勾選了主要付款條件，不可勾選多個！
             INITIALIZE g_errparam TO NULL
             LET g_errparam.code = 'apm-00161'
             LET g_errparam.extend = g_pmbd_d[l_ac].pmbddocno
             LET g_errparam.popup = TRUE
             CALL cl_err()

          END IF
          IF g_pmbd_d[l_ac].pmbd003 = '2' THEN   #已勾選了主要收款條件，不可勾選多個！
             INITIALIZE g_errparam TO NULL
             LET g_errparam.code = 'apm-00161'
             LET g_errparam.extend = g_pmbd_d[l_ac].pmbddocno
             LET g_errparam.popup = TRUE
             CALL cl_err()

          END IF
          LET r_success = FALSE
          RETURN r_success
       END IF
       RETURN r_success
       
END FUNCTION
