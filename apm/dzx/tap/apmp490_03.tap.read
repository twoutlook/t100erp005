     FROM pmaj_t
    WHERE pmajent = g_enterprise
      AND pmaj001 = r_pmdl.pmdl004
      AND pmajstus = 'Y'
      AND pmaj004 = 'Y' 
   IF cl_null(r_pmdl.pmdl022) THEN
