      CALL apmp490_03_pmdl011_ref(g_pmdl_d[l_cnt].pmdl011_03_01)
           RETURNING g_pmdl_d[l_cnt].pmdl011_03_01_desc

      CALL apmp490_03_pmdl015_ref(g_pmdl_d[l_cnt].pmdl015_03_01)
           RETURNING g_pmdl_d[l_cnt].ooail003_03_01

      CALL apmp490_03_pmdl017_ref(g_pmdl_d[l_cnt].pmdl017_03_01)
           RETURNING g_pmdl_d[l_cnt].pmaml003_03_01

      LET l_cnt = l_cnt + 1

   END FOREACH

   CALL g_pmdl_d.deleteElement(l_cnt) 
   
   LET l_cnt = l_cnt - 1

   IF l_cnt >=1 THEN
      LET l_wc = " pmdl004 = '",g_pmdl_d[1].pmdl004_03_01,"' "
