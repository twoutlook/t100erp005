   LET l_oofa001 = ''
   SELECT oofa001 INTO l_oofa001
     FROM oofa_t
    WHERE oofaent = g_enterprise
      AND oofa002 = '1'
      AND oofa003 = p_site

   IF NOT cl_null(l_oofa001) THEN
      #主要出貨地址
         SELECT oofb019,oofb011 INTO r_oofb019,r_oofb011
           FROM oofb_t
          WHERE oofbent = g_enterprise
            AND oofb002 = l_oofa001
            AND oofb002 = '3'
            AND oofb010 = 'Y'
