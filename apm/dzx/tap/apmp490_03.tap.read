      #公用欄位給值 
      LET l_pmdl.pmdlownid = g_user
      LET l_pmdl.pmdlowndp = g_grup
      LET l_pmdl.pmdlcrtid = g_user
      LET l_pmdl.pmdlcrtdp = g_grup
