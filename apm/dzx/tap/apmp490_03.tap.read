         IF cl_null(r_oofb019) THEN
            SELECT oofb019,oofb011 INTO r_oofb019,r_oofb011
              FROM oofb_t
             WHERE oofbent = g_enterprise 
               AND oofb002 = l_oofa001
               AND oofb002 = '3'
               AND rownum = 1
         END IF
         #呼叫地址組合應用元件 
   END IF
   RETURN r_oofb019,r_oofb011
