   LET l_pmdb049 = ''
   LET l_pmdb006 = ''
   LET l_pmdb040 = ''
   LET l_pmdb014 = ''
   LET l_pmdb015 = ''

   SELECT NVL(pmdb049,0),NVL(pmdb006,0),NVL(pmdb040,0),pmdb014,pmdb015
