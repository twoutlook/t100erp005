# Memo...........:
# Usage..........: CALL apmp490_03_b_fill01(p_wc)
#                  RETURNING 回传参数
# Input parameter: 传入参数变量1   传入参数变量说明1
#                : 传入参数变量2   传入参数变量说明2
# Return code....: 回传参数变量1   回传参数变量说明1
#                : 回传参数变量2   回传参数变量说明2
# Date & Author..: 2014/06/19 By ming
# Modify.........:
################################################################################
PUBLIC FUNCTION apmp490_03_b_fill01(p_wc)
   DEFINE p_wc     STRING
   DEFINE l_sql    STRING
   DEFINE l_cnt    LIKE type_t.num5
   DEFINE l_wc     STRING 
   
   WHENEVER ERROR CONTINUE 

   CALL g_pmdl_d.clear()

   LET l_sql = "SELECT pmdl004,'',pmdl009,'',pmdl010,'',pmdl011,'', ",
               "       pmdl012,pmdl013,pmdl015,'',pmdl016,pmdl017,'', ",
               "       pmdl023,pmdl054,pmdl033,pmdl055 ",
               "  FROM p490_03_pmdl_t ",
               " WHERE ",p_wc
   PREPARE apmp490_03_b_fill01_prep FROM l_sql
   DECLARE apmp490_03_b_fill01_curs CURSOR FOR apmp490_03_b_fill01_prep

   LET l_cnt = 1
   FOREACH apmp490_03_b_fill01_curs INTO g_pmdl_d[l_cnt].*
      IF STATUS THEN
         INITIALIZE g_errparam TO NULL
         LET g_errparam.code = STATUS
         LET g_errparam.extend = 'foreach'
         LET g_errparam.popup = TRUE
         CALL cl_err()

         EXIT FOREACH
      END IF

      CALL apmp490_03_get_pmaal004(g_pmdl_d[l_cnt].pmdl004_03_01)
