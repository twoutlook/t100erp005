         UPDATE p490_03_pmdp_rel_t SET pmdp021 = g_pmdp_d[l_ac1].pmdp021_03_03
          WHERE pmdl004  = g_pmdl_d[g_d_idx_p49003_01].pmdl004_03_01
            AND pmdpseq  = g_pmdp_d[l_ac1].pmdpseq_03_03
            AND pmdpseq1 = g_pmdp_d[l_ac1].pmdpseq1_03_03

   END INPUT
